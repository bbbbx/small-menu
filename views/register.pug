extends layout

block content
  div(class="container")
    div(class="row")  
      div(class="col")
      div(class="col")
        form(action="/register", method="post" id="register")
          h5 注册
          input(type="email" class="form-control my-2" id="email" name="email" required autofocus="autofocus" placeholder="E-mail")
          input(type="text" class="form-control my-2" id="account" name="account" required placeholder="账号")
          input(type="password" class="form-control my-2" id="password" name="password" required placeholder="密码")
          input(type="password" class="form-control my-2" id="passwordConfirm" name="passwordConfirm" required placeholder="确认密码")
          hr
          input(type="text" class="form-control" id="captcha" name="captcha" required placeholder="验证码(区分大小写)")
          #{ captcha.data }
          button(type="submit" class="btn btn-primary") 注册
      div(class="col") 
  - var text = captcha.text
  script
    | let password = document.querySelector('#password');
    | let passwordConfirm = document.querySelector('#passwordConfirm');
    | let form = document.querySelector('#register');
    | passwordConfirm.addEventListener('change', function() {
    |   if (passwordConfirm.value !== password.value) {
    |     passwordConfirm.focus();
    |     swal('两次密码不一致');
    |   }
    | });
    | form.addEventListener('submit', function() {
    |   console.log('a');
    | });