extends layout

block content
  div(class="container")
    div(class="card-columns")
      - for (let i = 0; i < users.length; i++)
        div(class="card")
          img(class="card-img-top" src=users[i].avatar alt="Card image cap")
          div(class="card-body")
            h5(class="card-title") #{ users[i].username }
            p(class="card-text") #{ users[i].intro }
            p(class="card-text")
              small(class="text-muted") #{ users[i].updatedAt }
            a(href=`/user/${users[i].id}` class="btn btn-success") 查看
        