extends layout

block content
  div(class='container' style="margin-top: 100px")
    div(class="row")
      div(class="col")
      div(class="col")
        - for (var x = 0; x < errors.length; x++) 
          div(class="alert alert-danger" role="alert") #{ errors[x] }
        - for (var j = 0; j < infos.length; j++) 
          div(class="alert alert-danger" role="alert") #{ infos[j] }
        h5 登录
        form(action="/login", method="post")
          div(class="form-group")
            label(for="username") 账户
            input(type="text" class="form-control" id="username" name="username" required autofocus="autofocus")
          div(class="form-group")
            label(for="password") 密码
            input(type="password" class="form-control" id="password" name="password" required)
          button(type="submit" class="btn btn-primary") 提交
        div(class="row")
          div(class="col")
            a(class="" href="/register") 注册
          div(class="col")
            a(class="" href="/password") 忘记密码？
      div(class="col")
    