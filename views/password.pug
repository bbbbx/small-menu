extends layout

block content
  div(class="container" style="margin-top: 100px")
    div(class="row")
      div(class="col")
      div(class="col")
        - for (var x = 0; x < errors.length; x++) 
          div(class="alert alert-danger" role="alert") #{ errors[x] }
        - for (var j = 0; j < infos.length; j++) 
          div(class="alert alert-success" role="alert") #{ infos[j] }
        h5 找回密码
        if email
          form(action="/password", method="post")
            input(type="text" class="form-control" id="account" name="account" required autofocus="autofocus" value=account)          
            input(type="email" class="form-control" id="email" name="email" required value=email)    
            input(type="password" class="form-control" id="password" name="password" value=password required)
            input(type="password" class="form-control" id="passwordConfirm" name="passwordConfirm" value=passwordConfirm required)
            input(type="text" class="form-control" id="captcha" name="captcha" required placeholder="请填写下方的验证码(区分大小写)")
            #{ captcha.data }
            input(type="text" class="form-control" id="emailCaptcha" name="emailCaptcha" placeholder="邮箱验证码")
            button(type="submit" class="btn btn-primary" disable) 获取邮箱验证码    
            | &nbsp;&nbsp;
            button(type="submit" class="btn btn-primary") 提交
        else 
          form(action="/password", method="post")
            input(type="text" class="form-control" id="account" name="account" required autofocus="autofocus" placeholder="账号")
            input(type="email" class="form-control" id="email" name="email" required placeholder="邮箱")
            input(type="password" class="form-control" id="password" name="password" placeholder="新密码" required)
            input(type="password" class="form-control" id="passwordConfirm" name="passwordConfirm" placeholder="确认新密码" required)
            input(type="text" class="form-control" id="captcha" name="captcha" required placeholder="请填写下方的验证码(区分大小写)")
            #{ captcha.data }
            input(type="text" class="form-control" id="emailCaptcha" name="emailCaptcha" placeholder="邮箱验证码")
            button(type="submit" class="btn btn-primary") 获取邮箱验证码
            | &nbsp;&nbsp;
            button(type="submit" class="btn btn-primary") 提交
      div(class="col")